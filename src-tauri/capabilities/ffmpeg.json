{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "ffmpeg-access",
  "description": "Access to ffmpeg sidecars",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ffmpeg",
          "args": true
        },
        {
          "name": "ffprobe",
          "args": true
        }
      ]
    }
  ]
}